<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moon_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textColor="@color/lotus_ink"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questionSectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section_question"
            android:textColor="@color/lotus_ink"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/question_count_label"
            android:textColor="@color/lotus_ink"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/questionCountSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/duck_egg_cyan_deep"
            android:popupBackground="@color/moon_white" />

        <TextView
            android:id="@+id/questionContentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/question_content_label"
            android:textColor="@color/lotus_ink"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/questionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/sendSectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section_send"
            android:textColor="@color/lotus_ink"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mailToInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="emailAddress"
            android:hint="@string/hint_mail_to"
            android:inputType="textEmailAddress"
            android:textColor="@color/lotus_ink"
            android:textColorHint="@color/duck_egg_cyan_deep"
            android:backgroundTint="@color/duck_egg_cyan_deep" />

        <TextView
            android:id="@+id/mailDeliveryNoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/mail_delivery_note"
            android:textColor="@color/duck_egg_cyan_deep"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kekkaiSectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section_kekkai"
            android:textColor="@color/lotus_ink"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lockModeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lock_mode_label"
            android:textColor="@color/lotus_ink"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/lockModeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/duck_egg_cyan_deep"
            android:popupBackground="@color/moon_white" />

        <TextView
            android:id="@+id/weekdaySelectLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/weekday_select_label"
            android:textColor="@color/lotus_ink"
            android:visibility="gone"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/weekdayContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/weekdayNoReservationNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/weekday_no_reservation_note"
            android:textColor="@color/duck_egg_cyan_deep"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lockTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/lock_time_label"
            android:textColor="@color/lotus_ink"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lockTimeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lockTimeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lotus_ink"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/editLockTimeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:backgroundTint="@color/duck_egg_cyan_deep"
                android:text="@string/edit_lock_time"
                android:textColor="@color/lotus_ink" />
        </LinearLayout>

        <TextView
            android:id="@+id/operationSectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/section_kekkai_operation"
            android:textColor="@color/lotus_ink"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lockStateRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main_status_placeholder"
                android:textColor="@color/lotus_ink"
                android:textSize="16sp" />

            <Button
                android:id="@+id/runLockCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:backgroundTint="@color/duck_egg_cyan_deep"
                android:text="@string/run_lock_check"
                android:textColor="@color/lotus_ink" />
        </LinearLayout>

        <TextView
            android:id="@+id/advancedSettingsToggleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/advanced_settings_closed"
            android:textColor="@color/lotus_ink"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/advancedSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/normalHomeRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/normalHomeValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/normal_home_not_selected"
                    android:textColor="@color/lotus_ink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/selectNormalHomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minHeight="36dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:backgroundTint="@color/duck_egg_cyan_deep"
                    android:text="@string/select_normal_home"
                    android:textColor="@color/lotus_ink" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/settingsResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/lotus_ink"
            android:textSize="14sp" />

        <Button
            android:id="@+id/saveSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/duck_egg_cyan_deep"
            android:text="@string/save_settings"
            android:textColor="@color/lotus_ink" />

    </LinearLayout>
</ScrollView>
